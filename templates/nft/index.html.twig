{% extends 'base.html.twig' %}

{% block title %}NFT index
{% endblock %}

{% block body %}
	<h1>NFT index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Img</th>
				<th>ExistingNumber</th>
				<th>LaunchDate</th>
				<th>LaunchPriceEth</th>
				<th>LaunchPriceEur</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for nft in nfts %}
				<tr>
					<td>{{ nft.id }}</td>
					<td>{{ nft.name }}</td>
					<td>{{ nft.img }}</td>
					<td>{{ nft.existingNumber }}</td>
					<td>{{ nft.launchDate ? nft.launchDate|date('Y-m-d') : '' }}</td>
					<td>{{ nft.launchPriceEth }}</td>
					<td>{{ nft.launchPriceEur }}</td>
					<td>
						<a href="{{ path('app_nft_show', {'id': nft.id}) }}">show</a>
						<a href="{{ path('app_nft_edit', {'id': nft.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_nft_new') }}">Create new</a>
{% endblock %}
